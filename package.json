{
  "name": "hapi-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Scalable and delightful way to write #hapijs app with #typescript #hapily",
  "bugs": "https://github.com/nomadovoip/hapi-typescript-boilerplate/issues",
  "homepage": "https://www.nomado.eu",
  "main": "main.js",
  "scripts": {
    "start": "nodemon -e ts  --exec \"npm run start:server\"",
