  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@hapi/hapi": "^19.0.5",
    "@hapi/joi": "^17.0.2"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.0",
    "@types/jest": "^24.9.0",
    "concurrently": "^5.0.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
